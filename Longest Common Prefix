#include <iostream>
#include <string>
using namespace std;

string commonPrefix(string s[], int n) {
    if (n == 0) return "";

    string pre = s[0]; 

    for (int i = 1; i < n; i++) {
        string temp = "";
        int j = 0, k = 0;

        while (j < pre.size() && k < s[i].size() && pre[j] == s[i][k]) {
            temp += pre[j];
            j++;
            k++;
        }
        pre = temp; 

        if (pre == "") return ""; 
    }
    return pre;
}

int main() {
    int n;
    cout << "How many words? ";
    cin >> n;

    if (n == 0) {
        cout << "" << endl;
        return 0;
    }

    string s[200];
    cout << "Enter the words:\n";
    for (int i = 0; i < n; i++) {
        cin >> s[i];
    }

    string ans = commonPrefix(s, n);
    cout << "Answer: " << ans << endl;

    return 0;
}
