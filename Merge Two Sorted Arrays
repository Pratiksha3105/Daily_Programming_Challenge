#include <iostream>
using namespace std;

int main() {
    int m, n;
    cout << "Enter size of arr1: ";
    cin >> m;
    cout << "Enter size of arr2: ";
    cin >> n;

    int arr1[m], arr2[n];

    cout << "Enter elements of arr1 (sorted): ";
    for (int i = 0; i < m; i++) {
        cin >> arr1[i];
    }

    cout << "Enter elements of arr2 sorted: ";
    for (int i = 0; i < n; i++) {
        cin >> arr2[i];
    }

    for (int i = 0; i < m; i++) {
        if (arr1[i] > arr2[0]) {
            int temp = arr1[i];
            arr1[i] = arr2[0];
            arr2[0] = temp;

            int first = arr2[0];
            int k;
            for (k = 1; k < n && arr2[k] < first; k++) {
                arr2[k - 1] = arr2[k];
            }
            arr2[k - 1] = first;
        }
    }

    cout << "After merging:\narr1 = ";
    for (int i = 0; i < m; i++) {
        cout << arr1[i] << " ";
    }
    cout << "\narr2 = ";
    for (int i = 0; i < n; i++) {
        cout << arr2[i] << " ";
    }
    cout << endl;

    return 0;
}
