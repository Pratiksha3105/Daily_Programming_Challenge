#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;
    int h[100000];
    for (int i = 0; i < n; i++) cin >> h[i];

    int left[100000], right[100000];

    left[0] = h[0];
    for (int i = 1; i < n; i++) {
        if (h[i] > left[i-1])
            left[i] = h[i];
        else
            left[i] = left[i-1];
    }

    right[n-1] = h[n-1];
    for (int i = n-2; i >= 0; i--) {
        if (h[i] > right[i+1])
            right[i] = h[i];
        else
            right[i] = right[i+1];
    }

    int water = 0;
    for (int i = 0; i < n; i++) {
        int small;
        if (left[i] < right[i])
            small = left[i];
        else
            small = right[i];
        water += small - h[i];
    }

    cout << water;
    return 0;
}
